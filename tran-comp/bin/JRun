#!/bin/bash

if [ "" == "$1" ]; then
    echo "" 1>&2
    echo "USAGE: $0 class [arguments]"    1>&2
    echo "   class     - string - suffix" 1>&2
    echo "   arguments - list   - optional arguments passed to test code" 1>&2
    echo "Example: $0 ViewTLE data/TLE/allfields.tle 8015"  1>&2
    echo "" 1>&2
    exit 1
fi

MAIN_CLASS=org.trncmp.apps.${1}
shift

if [ -e target/uber-lib-1.2.1-SNAPSHOT.jar ]; then
    java -Djava.net.preferIPv4Stack=true -cp target/uber-lib-1.2.1-SNAPSHOT.jar ${MAIN_CLASS} $*
    exit $?
else
    echo "You need to do a:  make jar"
fi

exit -1

